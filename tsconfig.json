{
	"compilerOptions": {
		"noEmit": true,
		"allowJs": true,
		"checkJs": false,
		"target": "es2024",
		// Target environment (https://www.npmjs.com/package/@tsconfig/node24)
		"lib": [
			"es2024",
			"ESNext.Array",
			"ESNext.Collection",
			"ESNext.Error",
			"ESNext.Iterator",
			"ESNext.Promise"
		],
		"module": "nodenext",
		"moduleResolution": "node16",
		"isolatedModules": true,
		"strict": false,
		"noImplicitAny": false,
		"allowImportingTsExtensions": true,
		"skipLibCheck": true,
		"strictBindCallApply": true,
		"erasableSyntaxOnly": true,
	},
	"include": [
		"index.mts"
	],
	"typedocOptions": {
		"entryPoints": [
			"index.mts"
		],
		"jsDocCompatibility": {
			"exampleTag": true,
			"defaultTag": true,
			"inheritDocTag": true,
			"ignoreUnescapedBraces": true
		},
		"customCss": "./docsTheme/main.css"
	}
}